from langchain.llms import OpenAI
from langchain.chains import LLMChain
from langchain.prompts import PromptTemplate

# Initialize OpenAI LLM
llm = OpenAI(openai_api_key="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")

# Define a simple prompt for the agent
template = """
You are an AI assistant with expertise in data analysis and automation. Answer the following question:
Question: {question}
"""

# Set up the prompt and LLM chain
prompt = PromptTemplate(template=template, input_variables=["question"])
chain = LLMChain(prompt=prompt, llm=llm)

# Example query
query = "What is the impact of AI in healthcare?"
response = chain.run(question=query)
print(f"Agent Response: {response}")